<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.udacity.sandwichclub.DetailActivity"
    tools:showIn="@layout/activity_detail">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <TextView
            android:id="@+id/place_of_orgin_label"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"

            android:text="@string/detail_place_of_origin_label"
            android:textColor="@color/colorPrimaryDark"
            android:textStyle="bold"
            style="@style/TextAppearance.AppCompat.Title"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/origin_tv"

            android:layout_width="0dp"
            android:layout_height="wrap_content"

            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"

            tools:text="India"
            style="@style/Base.TextAppearance.AppCompat.Subhead"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/place_of_orgin_label" />

        <TextView
            android:id="@+id/detail_also_known_as_label"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"

            android:text="@string/detail_also_known_as_label"
            android:textColor="@color/colorPrimaryDark"
            android:textStyle="bold"
            style="@style/TextAppearance.AppCompat.Title"

            app:layout_constraintBottom_toBottomOf="@+id/place_of_orgin_label"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/place_of_orgin_label" />

        <TextView
            android:id="@+id/also_known_tv"

            android:layout_width="0dp"
            android:layout_height="wrap_content"

            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"

            tools:text="Bombay Burger,Vada Pao,Wada Pav,Wada Pao,Pao Vada,Pav Vada,Pao Wada,Pav Wada"
            style="@style/Base.TextAppearance.AppCompat.Subhead"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/detail_also_known_as_label"
            app:layout_constraintTop_toBottomOf="@+id/detail_also_known_as_label" />

        <TextView
            android:id="@+id/detail_ingredients_label"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"

            android:text="@string/detail_ingredients_label"
            android:textColor="@color/colorPrimaryDark"
            android:textStyle="bold"
            style="@style/TextAppearance.AppCompat.Title"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/origin_tv" />

        <TextView
            android:id="@+id/ingredients_tv"

            android:layout_width="0dp"
            android:layout_height="wrap_content"

            android:layout_marginEnd="8dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"

            tools:text="Deep-fried mashed potato patty, chilli peppers, garlic,ginger, bread bun"
            style="@style/Base.TextAppearance.AppCompat.Subhead"

            app:layout_constraintEnd_toStartOf="@+id/detail_also_known_as_label"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/detail_ingredients_label"/>


        <TextView
            android:id="@+id/detail_description_label"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"

            android:text="@string/detail_description_label"
            android:textColor="@color/colorPrimaryDark"
            android:textStyle="bold"
            style="@style/TextAppearance.AppCompat.Title"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ingredients_tv" />

        <TextView
            android:id="@+id/description_tv"

            android:layout_width="0dp"
            android:layout_height="wrap_content"

            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"

            tools:text="ada Pav is a vegetarian fast"
            style="@style/Base.TextAppearance.AppCompat.Subhead"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/detail_description_label" />


    </android.support.constraint.ConstraintLayout>


</android.support.v4.widget.NestedScrollView>